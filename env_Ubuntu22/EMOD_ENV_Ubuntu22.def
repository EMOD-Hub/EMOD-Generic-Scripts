Bootstrap: docker
From: ubuntu:22.04

%post
    apt-get update

    apt-get install software-properties-common -y
    apt-get update
    add-apt-repository universe

    apt-get upgrade -y

    apt-get install python3 -y
    apt-get install python3-pip -y
    apt-get install mpich -y

    pip3 install pip              --upgrade
    pip3 install emod-api==1.28.5 --extra-index-url https://packages.idmod.org/api/pypi/pypi-production/simple

%runscript


%environment


%test


%labels
    Author kfrey@idmod.org

%help
    Minimal container for running EMOD using emod-api for file support.