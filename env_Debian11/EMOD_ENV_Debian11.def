Bootstrap: docker
From: debian:11.5

%post
    apt-get update
    apt-get upgrade -y

    apt-get install python3 -y
    apt-get install python3-pip -y
    apt-get install mpich -y

    pip3 install pip              --upgrade
    pip3 install emod-api==1.25.1 --extra-index-url https://packages.idmod.org/api/pypi/pypi-production/simple
    pip3 install scikit-learn

%runscript


%environment


%test


%labels
    Author kfrey@idmod.org

%help
    Minimal container for running EMOD using emod-api for file support.